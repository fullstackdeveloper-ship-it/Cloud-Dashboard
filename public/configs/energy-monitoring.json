{
  "title": "Energy Monitoring Dashboard",
  "description": "Real-time energy consumption and generation monitoring",
  "panel": {
    "title": "Energy Monitoring Dashboard",
    "backgroundColor": "#ffffff",
    "borderColor": "#e0e0e0",
    "borderWidth": 1,
    "borderRadius": 8
  },
  "refresh": {
    "enabled": true,
    "interval": 5000
  },
  "axes": {
    "x": {
      "type": "time",
      "title": "Time",
      "format": "HH:mm:ss",
      "gridLines": true,
      "showGrid": true,
      "show": true
    },
    "y": [
      {
        "title": "Power (W)",
        "unit": "watts",
        "min": 0,
        "max": 300000,
        "gridLines": true,
        "showGrid": true,
        "show": true,
        "side": "left"
      }
    ]
  },
  "series": [
    {
      "name": "PV Generation",
      "type": "line",
      "yAxis": 0,
      "color": "#8b4513",
      "lineWidth": 3,
      "markerSize": 12,
      "markerStyle": "circle",
      "markerLineWidth": 2,
      "markerLineColor": "#8b4513",
      "fill": "none",
      "dataField": "W_PV",
      "unit": "W"
    },
    {
      "name": "Load Consumption",
      "type": "line",
      "yAxis": 0,
      "color": "#8b0000",
      "lineWidth": 3,
      "markerSize": 12,
      "markerStyle": "circle",
      "markerLineWidth": 2,
      "markerLineColor": "#8b0000",
      "fill": "none",
      "dataField": "W_Load",
      "unit": "W"
    },
    {
      "name": "Grid Import/Export",
      "type": "line",
      "yAxis": 0,
      "color": "#1a365d",
      "lineWidth": 2,
      "markerSize": 10,
      "markerStyle": "circle",
      "markerLineWidth": 2,
      "markerLineColor": "#1a365d",
      "fill": "none",
      "dataField": "W_Grid",
      "unit": "W"
    },
    {
      "name": "Generator",
      "type": "line",
      "yAxis": 0,
      "color": "#1e4d2b",
      "lineWidth": 2,
      "markerSize": 10,
      "markerStyle": "circle",
      "markerLineWidth": 2,
      "markerLineColor": "#1e4d2b",
      "fill": "none",
      "dataField": "W_Gen",
      "unit": "W"
    }
  ],
  "thresholds": [
    {
      "value": 50000,
      "color": "#f39c12",
      "label": "High Load Warning",
      "yAxis": 0
    },
    {
      "value": 80000,
      "color": "#e74c3c",
      "label": "Critical Load",
      "yAxis": 0
    }
  ],
  "alerts": [
    {
      "name": "High Load Alert",
      "condition": "W_Load > 80000",
      "severity": "warning",
      "message": "Load consumption is very high"
    },
    {
      "name": "Grid Import Alert",
      "condition": "W_Grid > 100000",
      "severity": "info",
      "message": "High grid import detected"
    },
    {
      "name": "PV Generation Alert",
      "condition": "W_PV < 10000",
      "severity": "info",
      "message": "Low PV generation"
    }
  ],
  "annotations": [
  
  ],
  "tooltip": {
    "enabled": true,
    "format": "HH:mm:ss",
    "showValues": true,
    "showUnits": true,
    "mode": "all",
    "shared": true,
    "hoverinfo": "x+y+text",
    "hovertemplate": "<b>%{fullData.name}</b><br>Time: %{x}<br>Power: %{y:,.0f} W<br><extra></extra>"
  },
  "legend": {
    "enabled": true,
    "position": "top",
    "orientation": "horizontal"
  },
  "zoom": {
    "enabled": true,
    "type": "x"
  },
  "pan": {
    "enabled": true,
    "type": "x"
  }
}
