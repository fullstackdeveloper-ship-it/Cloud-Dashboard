{
  "title": "System Metrics Dashboard",
  "description": "Real-time system performance monitoring",
  "panel": {
    "title": "System Metrics",
    "backgroundColor": "#ffffff",
    "borderColor": "#e0e0e0",
    "borderWidth": 1,
    "borderRadius": 8
  },
  "refresh": {
    "enabled": true,
    "interval": 5000
  },
  "axes": {
    "x": {
      "type": "time",
      "title": "Time",
      "format": "HH:mm:ss",
      "gridLines": true,
      "show": true
    },
    "y": [
      {
        "title": "CPU Usage (%)",
        "unit": "percent",
        "min": 0,
        "max": 100,
        "gridLines": true,
        "show": true,
        "side": "left"
      },
      {
        "title": "Memory Usage (GB)",
        "unit": "gigabytes",
        "min": 0,
        "max": 16,
        "gridLines": true,
        "show": true,
        "side": "right"
      }
    ]
  },
  "series": [
    {
      "name": "CPU Usage",
      "type": "line",
      "yAxis": 0,
      "color": "#ef4444",
      "lineWidth": 3,
      "markerSize": 6,
      "markerStyle": "circle",
      "markerLineWidth": 2,
      "markerLineColor": "#ef4444",
      "fill": "tozeroy",
      "opacity": 0.3,
      "dataField": "cpu_usage",
      "unit": "%"
    },
    {
      "name": "Memory Usage",
      "type": "line",
      "yAxis": 1,
      "color": "#3b82f6",
      "lineWidth": 3,
      "markerSize": 6,
      "markerStyle": "circle",
      "markerLineWidth": 2,
      "markerLineColor": "#3b82f6",
      "fill": "tozeroy",
      "opacity": 0.3,
      "dataField": "memory_usage",
      "unit": "GB"
    },
    {
      "name": "Network I/O",
      "type": "line",
      "yAxis": 0,
      "color": "#10b981",
      "lineWidth": 2,
      "markerSize": 5,
      "markerStyle": "circle",
      "markerLineWidth": 2,
      "markerLineColor": "#10b981",
      "fill": "none",
      "dataField": "network_io",
      "unit": "Mbps"
    },
    {
      "name": "Disk I/O",
      "type": "line",
      "yAxis": 0,
      "color": "#f59e0b",
      "lineWidth": 2,
      "markerSize": 5,
      "markerStyle": "circle",
      "markerLineWidth": 2,
      "markerLineColor": "#f59e0b",
      "fill": "none",
      "dataField": "disk_io",
      "unit": "MB/s"
    }
  ],
  "thresholds": [
    {
      "value": 80,
      "color": "#f59e0b",
      "label": "High CPU Usage",
      "yAxis": 0
    },
    {
      "value": 90,
      "color": "#ef4444",
      "label": "Critical CPU Usage",
      "yAxis": 0
    },
    {
      "value": 12,
      "color": "#f59e0b",
      "label": "High Memory Usage",
      "yAxis": 1
    }
  ],
  "alerts": [
    {
      "name": "High CPU Alert",
      "condition": "cpu_usage > 80",
      "severity": "warning",
      "message": "CPU usage is high"
    },
    {
      "name": "Critical CPU Alert",
      "condition": "cpu_usage > 90",
      "severity": "critical",
      "message": "Critical CPU usage detected"
    },
    {
      "name": "High Memory Alert",
      "condition": "memory_usage > 12",
      "severity": "warning",
      "message": "Memory usage is high"
    }
  ],
  "tooltip": {
    "enabled": true,
    "format": "HH:mm:ss",
    "showValues": true,
    "showUnits": true,
    "mode": "all",
    "shared": true,
    "hoverinfo": "x+y+text",
    "hovertemplate": "<b>%{fullData.name}</b><br>Time: %{x}<br>Value: %{y:,.1f}<br><extra></extra>"
  },
  "legend": {
    "enabled": true,
    "position": "top",
    "orientation": "horizontal"
  },
  "zoom": {
    "enabled": true,
    "type": "x"
  },
  "pan": {
    "enabled": true,
    "type": "x"
  }
}
